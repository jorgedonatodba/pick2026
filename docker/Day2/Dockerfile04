FROM ubuntu
LABEL maintainer="LALALALAL"
RUN apt update && apt install curl nginx -y && rm -rf /var/lib/apt/lists/*
WORKDIR /var/www/html/
ADD node_exporter-1.6.0.linux-amd64.tar.gz /root/
COPY index.html .
EXPOSE 80
ENV GIROPOPIS=true
ENTRYPOINT [ "nginx" ]
CMD ["-g"," daemon off;"]
HEALTHCHECK --timeout=4s CMD  curl -f localhost || exit 1